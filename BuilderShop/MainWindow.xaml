<Window x:Class="BuilderShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuilderShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="30" Text="Добро пожаловать" Margin="0,0,0,100"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="tbLogin"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="tbPassword"/>
            <Button x:Name="btnContinue" Content="Войти" Margin="0,0,0,10" Click="BtnContinue_Click"/>
            <Button x:Name="btnRegister" Content="Зарегестрироваться" Click="BtnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>
