<Window x:Class="BuilderShop.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuilderShop"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WrapPanel Height="25">
                <Button x:Name="btnProducts" Content="Товар" Click="BtnProducts_Click"/>
                <Button x:Name="btnUsers" Content="Пользователи" Click="BtnUsers_Click"/>
                <Button x:Name="btnSales" Content="Продажи" Click="BtnSales_Click"/>
                <Button x:Name="btnAddSale" Content="ПРодать" Click="BtnAddSale_Click"/>
            </WrapPanel>
            <Frame x:Name="fFrame" Height="400" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
