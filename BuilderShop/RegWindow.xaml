<Window x:Class="BuilderShop.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuilderShop"
        mc:Ignorable="d"
        Title="RegWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя"/>
            <TextBox x:Name="tbFName" Text="1"/>
            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="tbLName" Text="1"/>
            <TextBlock Text="Отчество"/>
            <TextBox x:Name="tbPName" Text="1"/>
            <TextBlock Text="Телефон"/>
            <TextBox x:Name="tbPhone" Text="1"/>
            <TextBlock Text="Дата рождения"/>
            <DatePicker x:Name="dpDOF" Text="01.01.2001"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="tbLogin" Text="1"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="tbPassword" Text="1"/>
            <Button Margin="0,10,0,0" Content="Зарегестрироваться" x:Name="btnReg" Click="BtnReg_Click"/>
            <Button Margin="0,10,0,0" Content="Назад" x:Name="btnBack" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
